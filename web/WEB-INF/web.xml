<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServicoItem</servlet-name>
        <servlet-class>servicos.ServicoItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrudEcommerce</servlet-name>
        <servlet-class>servicos.CrudEcommerce</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CrudComprar</servlet-name>
        <servlet-class>servicos.CrudComprar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServicoItem</servlet-name>
        <url-pattern>/servicoitem</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BuscaItem</servlet-name>
        <servlet-class>servicos.BuscaItem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuscaItem</servlet-name>
        <url-pattern>/buscaitem</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>LuMarEcommerce.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>CrudEcommerce</servlet-name>
        <url-pattern>/crudecommerce</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CrudComprar</servlet-name>
        <url-pattern>/crudcomprar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
